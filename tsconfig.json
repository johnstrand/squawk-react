{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "src",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2017",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "diagnostics": true,
    "listEmittedFiles": true,
    "lib": ["es5", "es6", "dom"],
    "strict": true
  },
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "src/setupTests.ts", "example", "lib", "dist"]
}
